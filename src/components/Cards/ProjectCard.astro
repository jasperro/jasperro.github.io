---
import Image from "@src/components/Image.astro";
import { Icon } from "@src/components/Icons";

const {
    title,
    description,
    imgUrl,
    imgRaw,
    icons = [],
    actioncomponent,
} = Astro.props;
---

<div
    class="flex flex-col justify-between rounded-sm bg-bgel p-5 shadow-sm transition-shadow hover:shadow-xl dark:bg-bgel-dark"
>
    <div>
        {
            imgUrl ? (
                <Image
                    classes="h-48 object-cover"
                    src={imgUrl}
                    imgRaw={imgRaw}
                    alt={title}
                />
            ) : (
                ""
            )
        }
    </div>

    <p class="pt-6 text-xl font-semibold">{title}</p>
    <p class="pt-2 text-base">{description}</p>
    <div class="mt-4 flex justify-between">
        <div class="mt-2 flex items-center">
            {icons.map((i: string) => <Icon name={i} />)}
        </div>
        <div class="mt-2">
            {
                actioncomponent
                    ? ((ActionComponent) => (
                          <ActionComponent {...actioncomponent[1]} />
                      ))(actioncomponent[0])
                    : null
            }
        </div>
    </div>
</div>
