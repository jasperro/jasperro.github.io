---
import { Icon as IconOriginal } from "astro-icon/components";
import { defaults, globals } from "./";

// Typescript being typescript
type Props = Omit<Parameters<typeof IconOriginal>[0], "slot">;

let { ...props } = Astro.props;
// Defaults for icon size
props.class = props.class ? props.class : defaults.class;
props.class += " " + globals.class;

props.title = props.title ? props.title : props.name;
---

<IconOriginal {...props} />
